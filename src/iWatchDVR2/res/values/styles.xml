<?xml version="1.0" encoding="UTF-8"?> 
<resources>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ==================================================== -->   
    
	<style name="ToolbarButton" parent="@android:style/TextAppearance">
		<item name="android:layout_height">70dip</item> 
        <item name="android:layout_width">80dip</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:drawablePadding">0dip</item>
  	</style>
  	<style name="ToolbarButton2" parent="@android:style/TextAppearance">
		<item name="android:layout_height">70dip</item> 
        <item name="android:layout_width">70dip</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:drawablePadding">0dip</item>
  	</style>
  	<style name="PresetButton" parent="@android:style/TextAppearance">
		<item name="android:layout_height">70dip</item> 
        <item name="android:layout_width">80dip</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">0dip</item>
  	</style>
  	<style name="PopupButton" parent="@android:style/TextAppearance">
		<item name="android:layout_height">70dip</item> 
        <item name="android:layout_width">75dip</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">0dip</item>
  	</style>
  	
  	<!-- ==================================================== -->
	<style name="PTZTextButtonText" parent="@android:style/TextAppearance">
		<item name="android:layout_height">75dip</item> 
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">0sp</item>
  	</style>
  	
	<style name="dividingLine">
  		<item name="android:layout_width">2dip</item>
  		<item name="android:layout_height">fill_parent</item>
  		<item name="android:background">#FF909090</item>
  	</style>
  	
  	<style name="PTZLinearLayoutButton4Landscape" parent="@android:style/TextAppearance">
  		<item name="android:layout_width">fill_parent</item>
  		<item name="android:layout_height">fill_parent</item>
  		<item name="android:layout_weight">1</item>
  		<item name="android:layout_gravity">center_vertical</item>
  		<item name="android:orientation">vertical</item>
  		<item name="android:gravity">center</item>
  		<item name="android:clickable">true</item>
  		<item name="android:paddingLeft">12sp</item>
  		<item name="android:paddingRight">12sp</item>

  	</style>
  	
  	<style name="PTZLinearLayoutButton4Portraint" parent="@android:style/TextAppearance">
  		<item name="android:layout_width">fill_parent</item>
  		<item name="android:layout_height">fill_parent</item>
  		<item name="android:layout_weight">1</item>
  		<item name="android:layout_gravity">center_vertical</item>
  		<item name="android:orientation">vertical</item>
  		<item name="android:gravity">center</item>
  		<item name="android:clickable">true</item>
  	</style>
  	
  	
  	<!-- ==================================================== -->   
  	<!-- see also:  @android:style/Widget.TextView.ListSeparator
  	     can't extends style with parent="@android:style/Widget.TextView.ListSeparator" ....why ?-->
